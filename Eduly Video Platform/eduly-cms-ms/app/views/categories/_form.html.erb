<%= form_for @category do |f| %>
	<% if @category.errors.any? %>
		<h2><%= pluralize(@category.errors.count, "error") %> prevented this category from saving:</h2>

		<ul>
			<% @category.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="panel-body">
		<p>
			<%= f.label :category_title %> <br>
			<%= f.text_field :category_title, class: 'form-control' %>
		</p>
		<p>
			<%= f.label :category_description %> <br>
			<%= f.text_area :category_description, class: 'form-control' %>
		</p>
		<p>
			<%= f.submit "Submit", class: "btn btn-primary" %>
		</p>
	</div>
<% end %>

<br>
<%= link_to "Back", categories_path %>
