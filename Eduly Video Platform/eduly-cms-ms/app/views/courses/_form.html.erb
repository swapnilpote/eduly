<%= form_for @course do |f| %>
	<% if @course.errors.any? %>
		<h2><%= pluralize(@course.errors.count, "error") %> prevented this course from saving:</h2>

		<ul>
			<% @course.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="panel-body">
		<p>
			<%= f.label :topic_id %> <br>
			<%= f.select :topic_id, Topic.order(:topic_title).collect{ |c| [c.topic_title, c.id] } %>
		</p>
		<p>
			<%= f.label :course_title %> <br>
			<%= f.text_field :course_title, class: 'form-control' %>
		</p>
		<p>
			<%= f.label :course_description %> <br>
			<%= f.text_area :course_description, class: 'form-control' %>
		</p>
		<p>
			<%= f.submit "Submit", class: "btn btn-primary" %>
		</p>
	</div>
<% end %>

<br>
<%= link_to "Back", courses_path %>
