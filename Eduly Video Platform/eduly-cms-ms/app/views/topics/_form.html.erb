<%= form_for @topic do |f| %>
	<% if @topic.errors.any? %>
		<h2><%= pluralize(@topic.errors.count, "error") %> prevented this topic from saving:</h2>

		<ul>
			<% @topic.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="panel-body">
		<p>
			<%= f.label :category_id %> <br>
			<%= f.select :category_id, Category.order(:category_title).collect{ |c| [c.category_title, c.id] } %>
		</p>
		<p>
			<%= f.label :topic_title %> <br>
			<%= f.text_field :topic_title, class: 'form-control' %>
		</p>
		<p>
			<%= f.label :topic_description %> <br>
			<%= f.text_area :topic_description, class: 'form-control' %>
		</p>
		<p>
			<%= f.submit "Submit", class: "btn btn-primary" %>
		</p>
	</div>
<% end %>

<br>
<%= link_to "Back", topics_path %>
